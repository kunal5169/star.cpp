#include<iostream>
    using namespace std;

    int main()
    {
        int n;

        cout << "Enter the base length ";
        cin >> n;
        
        for (int i = 0; i < n+1; i++)
        {
            cout << "\n";

         for (int k=n; k > i; k--) 
         {
           cout <<" ";
         }
                for (int j= 0; j < i; j++)
                {
                    cout << "* ";
                }
        }
        for (int i = n-1; i > 0; i--)
        {
            cout << "\n";

         for (int k=n; k > i; k--) 
         {
           cout <<" ";
         }
                for (int j= 0; j < i; j++)
                {
                    cout << "* ";
                }
        }

        return 0; 
    }
